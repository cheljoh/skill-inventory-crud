<div class="row well col-md-4">
  <form action="/skills/<%= @skill.id %>" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="form-group">
      <label for="Skill">Edit skill name:</label>
      <input type='text' name='skill[title]' value="<%= @skill.title %>"/>
    </div>
    <div class="form-group">
      <label for="Description">Edit description:</label>
      <textarea name='skill[description]'><%= @skill.description %></textarea>
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
